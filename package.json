{
  "name": "@sinedied/devto-cli",
  "version": "1.1.0",
  "description": "Dev.to authoring CLI to create and publish markdown files as articles, using assets hosted on GitHub.",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/sinedied/devto-cli.git"
  },
  "exports": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "dev": "./bin/devto.js"
  },
  "scripts": {
    "build": "npm run clean -s && tsc",
    "build:watch": "tsc -w --sourceMap",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test": "xo && npm run -s test:unit",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "npm run -s test:unit -- --watch",
    "clean": "rm -rf lib *.tgz",
    "commit": "git-cz",
    "release:check": "semantic-release --dry-run",
    "prepare": "husky install"
  },
  "keywords": [
    "cli",
    "authoring",
    "dev.to",
    "publish",
    "markdown",
    "github",
    "host",
    "assets",
    "articles",
    "sync"
  ],
  "author": {
    "name": "Yohan Lasorsa",
    "url": "https://twitter.com/sinedied"
  },
  "homepage": "https://github.com/sinedied/devto-cli",
  "bugs": {
    "url": "https://github.com/sinedied/devto-cli/issues"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "debug": "^4.1.1",
    "dotenv": "^16.0.0",
    "execa": "^6.1.0",
    "find-up": "^6.1.0",
    "fs-extra": "^10.0.0",
    "globby": "^13.1.1",
    "got": "^12.0.1",
    "gray-matter": "^4.0.2",
    "hasbin": "^1.2.3",
    "minimist": "^1.2.5",
    "ora": "^6.0.1",
    "p-map": "^5.1.0",
    "p-throttle": "^5.0.0",
    "slugify": "^1.4.0",
    "table": "^6.7.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^9.0.13",
    "@types/got": "^9.6.10",
    "@types/jest": "^27.0.2",
    "@types/minimist": "^1.2.0",
    "@types/node": "^14.0.1",
    "@types/table": "^6.3.2",
    "commitizen": "^4.1.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^7.0.0",
    "jest": "^27.2.4",
    "lint-staged": "^12.3.4",
    "semantic-release": "^19.0.2",
    "semantic-release-npm-github": "^2.0.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.5.4",
    "xo": "^0.48.0"
  },
  "prettier": {
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "node",
      "jest"
    ],
    "rules": {
      "@typescript-eslint/no-implicit-any-catch": "off",
      "@typescript-eslint/no-dynamic-delete": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-member-access": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/prefer-nullish-coalescing": "off",
      "unicorn/prefer-node-protocol": "off",
      "unicorn/no-array-callback-reference": "off",
      "camelcase": [
        "error",
        {
          "allow": [
            "body_markdown",
            "cover_image",
            "published_at",
            "canonical_url",
            "per_page",
            "devto_sync",
            "tag_list",
            "page_views_count",
            "positive_reactions_count",
            "comments_count",
            "organization_id"
          ]
        }
      ],
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Debug"
          ]
        }
      ]
    },
    "ignores": [
      "test/mocks/**/*",
      "test/*.spec.ts"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "collectCoverageFrom": [
      "*.js",
      "lib/**/*.js"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "verbose": true
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "extends": "semantic-release-npm-github",
    "branches": "main"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0",
    "npm": ">=6.0.0"
  },
  "files": [
    "bin",
    "lib",
    "template"
  ]
}
